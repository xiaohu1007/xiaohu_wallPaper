.previewLayout {
  width: 100%;
  height: 100vh;
  position: relative;
}
.previewLayout swiper {
  width: 100%;
  height: 100%;
}
.previewLayout swiper image {
  width: 100%;
  height: 100%;
}
.previewLayout .mask > view:not(.goBack) {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}
.previewLayout .mask .goBack {
  position: absolute;
  align-items: center;
  width: 38px;
  height: 38px;
  background-color: rgba(0, 0, 0, 0.5);
  margin-left: 0;
  border-radius: 100%;
  top: 0;
  -webkit-backdrop-filter: blur(10px);
          backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  display: flex;
  justify-content: center;
  align-items: center;
}
.previewLayout .mask .count {
  top: 10vh;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 40rpx;
  padding: 8rpx 28rpx;
  -webkit-backdrop-filter: blur(10rpx);
          backdrop-filter: blur(10rpx);
}
.previewLayout .mask .time {
  font-size: 140rpx;
  top: calc(10vh + 80rpx);
  color: #fff;
  font-weight: 100;
  line-height: 1em;
  text-shadow: 0 4rpx rgba(0, 0, 0, 0.3);
}
.previewLayout .mask .date {
  font-size: 34rpx;
  top: calc(10vh + 230rpx);
  text-shadow: 0 2rpx rgba(0, 0, 0, 0.3);
  color: #fff;
}
.previewLayout .mask .footer {
  background-color: rgba(255, 255, 255, 0.8);
  bottom: 10vh;
  border-radius: 120rpx;
  height: 120rpx;
  width: 65vw;
  color: #000;
  display: flex;
  justify-content: center;
  align-items: center;
  justify-content: space-around;
  box-sizing: 0 2rpx 0 rgba(0, 0, 0, 0.1);
  -webkit-backdrop-filter: blur(20rpx);
          backdrop-filter: blur(20rpx);
}
.previewLayout .mask .footer .box {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  padding: 2rpx 12rpx;
}
.previewLayout .mask .footer .box .text {
  font-size: 26rpx;
  color: #676767;
}
.previewLayout .popHeader {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}
.previewLayout .popHeader .title {
  color: #676767;
  font-size: 26rpx;
}
.previewLayout .popHeader .close {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 0;
  padding: 6rpx;
}
.previewLayout .infoPopup {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 30rpx 30rpx 0 0;
  overflow: hidden;
}
.previewLayout .infoPopup scroll-view {
  max-height: 60vh;
}
.previewLayout .infoPopup scroll-view .content .row {
  display: flex;
  padding: 16rpx 0;
  font-size: 32rpx;
  line-height: 1.7em;
}
.previewLayout .infoPopup scroll-view .content .row .label {
  color: #a7a7a7;
  width: 140rpx;
  text-align: right;
  font-size: 30rpx;
}
.previewLayout .infoPopup scroll-view .content .row .value {
  flex: 1;
  width: 0;
}
.previewLayout .infoPopup scroll-view .content .row .star-box {
  display: flex;
  align-items: center;
}
.previewLayout .infoPopup scroll-view .content .row .star-box .score {
  display: 26rpx;
  color: #676767;
  padding-left: 10rpx;
}
.previewLayout .infoPopup scroll-view .content .row .class {
  color: #fdbd7d;
}
.previewLayout .infoPopup scroll-view .content .row .tabs {
  display: flex;
  flex-wrap: nowrap;
}
.previewLayout .infoPopup scroll-view .content .row .tabs .tab {
  border: 1px solid #fdbd7d;
  color: #fdbd7d;
  font-size: 22rpx;
  padding: 10rpx 30rpx;
  border-radius: 40rpx;
  line-height: 1em;
  margin: 0 10rpx 10rpx 0;
}
.previewLayout .infoPopup scroll-view .content .copyright {
  font-style: 28rpx;
  padding: 20rpx;
  background-color: #f6f6f6;
  color: #666;
  border-radius: 10rpx;
  margin: 20rpx 0;
  line-height: 1.6em;
}
.previewLayout .starPopup {
  background-color: #fff;
  padding: 30rpx;
  width: 70vw;
  border-radius: 30rpx;
}
.previewLayout .starPopup .content {
  padding: 30rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.previewLayout .starPopup .content .text {
  color: #ffca3e;
  padding-left: 10rpx;
  width: 80rpx;
  line-height: 1em;
  text-align: right;
}
.previewLayout .starPopup .footer {
  display: flex;
  justify-content: center;
  align-items: center;
}